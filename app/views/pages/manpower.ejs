        }
        async function DeleteData(id) {

            let response = await fetch(`http://localhost:8080/api/manpower/${id}`, {
                method: 'delete',

            })
                .then(response => console.log(response))
                .catch(err => console.log(err));

        }
    </script>
</head>

<body>
    <div>
        <%- include ("../layouts/sidebar.ejs") -%>
    </div>


    <div class="content">
        <form>

            <h2>ใบขอกำลังคน</h2>
            <hr>
            <a class="btn btn-secondary" href="/add">addData</a>
       
            <div class="card-body">
                <% if(data.length){ %>
                    <table id="manpower" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">company</th>
                                <th scope="col">department</th>
                                <th scope="col">section</th>
                                <th scope="col">positionRequired</th>
                                <th scope="col">numberOrder</th>
                                <th width="200px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < data.length; i++){ %>
                                <tr>
                                    <th scope="row">
                                        <%= (i+1) %>
                                    </th>
                                    <td>
                                        <%= data[i].company %>
                                    </td>
                                    <td>
                                        <%= data[i].department %>
                                    </td>
                                    <td>
                                        <%= data[i].section %>
                                    </td>
                                    <td>
                                        <%= data[i].positionRequired %>
                                    </td>
                                    <td>
                                        <%= data[i].numberOrder %>
                                    </td>
                                    <td>
                                        <a href="/edit/<%= data[i].manPowerID %>" class="btn btn-success edit">Edit</a>
                                        <a onclick="DeleteData('<%= data[i].manPowerID %>')"
                                            class="btn btn-danger delete">Delete</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <% } %>
            </div>
    </div>
    </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#manpower').DataTable();
        });
    </script>
</body>

</html>